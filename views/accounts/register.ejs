<% layout('layout') -%>

<div class="container">
 <div class="row">
 <h1 style="padding-left:35%">SignUp</h1>
 <hr>
 <div style="width:30%;margin:0  auto;">
<form action="/register" method="POST">
  <p>
  <input class="thumbnail" type="text" name="username" placeholder="username">
  </p>

 <p>
 <input class="thumbnail" type="password" id="textbox1" name="password" placeholder="password">
</p>

<p class="full">
   <button type="submit" id="Validate" onclick="ValidatePassword()" class="btn btn-info">Submit</button>
</form>
 </div>
       </div>
</div>
<script type="text/javascript">
  function ValidatePassword() {
      var regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[#$@!%&*?])[A-Za-z\d#$@!%&*?]{10,12}$/;
      var txt = document.getElementById("textbox1");
      if (!regex.test(txt.value)) {
          alert("Password strength is not good.");
      } else {
          alert("Password strength is good.");
      }
  }
</script>


